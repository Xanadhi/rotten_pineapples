<div class="small-4 medium-4 large-4 columns movie-poster">

  <%= link_to image_tag(movie.image_url.to_s), movie_path(movie) %><br>
  <%= link_to movie.title, movie_path(movie) %><br>
  <%= formatted_date(movie.release_date) %> | 
  Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes
  <p><%= movie.description %></p>
  <hr>

</div>